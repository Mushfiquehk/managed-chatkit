{
    "family": "chatkit-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::288761746098:role/chatkit-ecs-task-execution-role",
    "containerDefinitions": [
        {
            "name": "backend",
            "image": "ghcr.io/OWNER/REPO-backend:master",
            "repositoryCredentials": {
                "credentialsParameter": "arn:aws:secretsmanager:us-east-1:288761746098:secret:ghcr_token/mushfiquehk-ellioU"
            },
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "ENVIRONMENT",
                    "value": "production"
                }
            ],
            "secrets": [
                {
                "name": "OPENAI_API_KEY",
                "valueFrom": "arn:aws:secretsmanager:us-east-1:288761746098:secret:chatkit/openai_api_key-CECSWi"
                }
            ]
        },
        {
            "name": "frontend",
            "image": "ghcr.io/OWNER/REPO-frontend:master",
            "repositoryCredentials": {
                "credentialsParameter": "arn:aws:secretsmanager:us-east-1:288761746098:secret:ghcr_token/mushfiquehk-ellioU"
            },
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ]
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}
